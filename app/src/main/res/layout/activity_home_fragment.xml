<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".HomeFragment">

    <!-- Address and Hours, Info Links -->
    <TextView
        android:id="@+id/address_and_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFD700"
        android:text="Address &amp; Hours"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_and_hours"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFD700"
        android:text="Info"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- New Appointment Notification -->
    <TextView
        android:id="@+id/new_appointment_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:text="You have a new appointment!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Appointment Details (Initially Hidden) -->
    <TextView
        android:id="@+id/appointment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_appointment_notification"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/rounded_background"/>
</RelativeLayout>
