<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".HomeFragment">

    <!-- Profile Image and Info -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="User Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Address and Hours, Info, Photos, Profile Picture Links -->
    <TextView
        android:id="@+id/address_and_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFD700"
        android:text="Address &amp; Hours"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_and_hours"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFD700"
        android:text="Info"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFD700"
        android:text="Photos"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photos"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFD700"
        android:text="Profile Picture"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Schedule and other data -->
    <TextView
        android:id="@+id/today_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Today's Schedule: --"
        android:layout_below="@id/profile_picture"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/completed_appts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Completed Appointments: --"
        android:layout_below="@id/today_schedule"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/estimated_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Estimated Revenue: --"
        android:layout_below="@id/completed_appts"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/hours_booked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Hours Booked: --"
        android:layout_below="@id/estimated_revenue"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/chair_utilization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Chair Utilization: --"
        android:layout_below="@id/hours_booked"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
